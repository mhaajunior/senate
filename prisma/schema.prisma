generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Intern {
  id           Int      @id @default(autoincrement())
  iden         String
  prefix       String
  firstName    String
  lastName     String
  academy      String
  faculty      String
  branch       String
  phone        String
  email        String
  startDate    DateTime
  endDate      DateTime
  preferredJob String
  sendDate     DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
